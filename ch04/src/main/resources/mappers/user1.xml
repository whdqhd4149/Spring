<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch04.mapper.User1Mapper">

    <insert id="insert">
        INSERT INTO user1 VALUES (#{uid}, #{name}, #{birth}, #{age})
    </insert>


    <select id="selectAll" resultType="kr.co.ch04.dto.User1DTO">
        select * from user1;
    </select>


    <select id="select" resultType="kr.co.ch04.dto.User1DTO">
        select * from user1 WHERE uid=#{uid};
    </select>
    <update id="update">
        UPDATE user1 SET
            name=#{name},
            birth=#{birth},
            age=#{age}
        WHERE
            uid=#{uid};
    </update>
    <delete id="delete">
        DELETE FROM user1 WHERE uid=#{uid};
    </delete>

</mapper>